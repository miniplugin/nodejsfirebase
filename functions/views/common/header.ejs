<!doctype html>

<head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/app/bgimg.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <h1><a href="/">
                <%= title %>
            </a></h1>

        <div class="col-md-12">
            <!-- 로그인 기능 영역 -->
            <div class="row">
                <div class="col-md-6">
                    <% if(logined==true) { %>
                        Looged in as : <span id="user"><%= name %> / <%= email %></span>
                        <a href="/board/logout" class="btn btn-info" role="button">Logout</a>
                    <% }else{ %>
                            <a href="/board/loginForm" class="btn btn-warning" role="button">
                                로그인
                            </a>
                    <% } %>
                    <a href="/board/boardList" role="button" class="btn btn-primary">게시판바로가기</a>
                </div>
            </div>
        </div>
        <br>